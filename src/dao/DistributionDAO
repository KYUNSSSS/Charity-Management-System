package dao;
import adt.*;
import entity.Distribution;
import java.io.*;

/**
 *
 * @author SCSM11
 */
public class DistributionDAO implements Serializable { 
     private String fileName = "donationDistribution.dat"; // File for storing data

    // Save DonationDistribution objects to file
    public void saveToFile(ListInterface<Distribution> distributionList) {
        File file = new File(fileName);
        try {
            ObjectOutputStream ooStream = new ObjectOutputStream(new FileOutputStream(file));
            ooStream.writeObject(distributionList); // Write the custom linked list to file
            ooStream.close();
        } catch (FileNotFoundException ex) {
            System.out.println("\nFile not found");
        } catch (IOException ex) {
            System.out.println("\nCannot save to file");
        }
    }

    // Retrieve DonationDistribution objects from file
    public ListInterface<Distribution> retrieveFromFile() {
        File file = new File(fileName);
        ListInterface<Distribution> distributionList = new LinkedList<>();
        try {
            ObjectInputStream oiStream = new ObjectInputStream(new FileInputStream(file));
            distributionList = (LinkedList<Distribution>) (oiStream.readObject());
            oiStream.close();
        } catch (FileNotFoundException ex) {
            System.out.println("\nNo such file.");
        } catch (IOException ex) {
            System.out.println("\nCannot read from file.");
        } catch (ClassNotFoundException ex) {
            System.out.println("\nClass not found.");
        } finally {
            return distributionList;
        }
    }
}
